@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "List of all users";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>List of all users</h4>
        </p>

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => user.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => user.UserName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => user.Email)
                        </td>
                        <td class="align-middle">
                            <form method="post" asp-action="Users">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <input type="hidden" name="newStatus" value="@(user.EmailConfirmed ? "false" : "true")" />
                                <button type="submit" class="btn @(user.EmailConfirmed ? "btn-success" : "btn-danger")">
                                    @(user.EmailConfirmed ? "Active" : "Block")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>