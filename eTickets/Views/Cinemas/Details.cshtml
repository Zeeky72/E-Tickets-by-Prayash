@model Cinema

@{
    ViewData["Title"] = "Details of the cinema";
}

<head>
    <link rel="stylesheet" href="~/path/to/styles.css" />
</head>

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <div class="image-container">
                        <img src="@Model.Logo" class="cinema-logo" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label cinema-label"></label>
                    <input asp-for="Name" class="form-control cinema-input cinema-bold" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label cinema-label"></label>
                    <textarea asp-for="Description" class="form-control cinema-input cinema-bold" rows="4" readonly></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
        })
    </script>
}
